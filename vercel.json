{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[[...route]]" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/genre", "destination": "/public/genre.html" },
    { "source": "/series", "destination": "/public/series.html" },
    { "source": "/watch", "destination": "/public/watch.html" }
  ]
}
